<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<SplitPane dividerPositions="0.5" prefHeight="300.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
       <items>
           <VBox>
               <children>
                   <ListView fx:id="profile_list" VBox.vgrow="ALWAYS" />
                   <HBox alignment="CENTER_LEFT" maxHeight="20.0" prefHeight="20.0">
                       <children>
                           <HBox HBox.hgrow="ALWAYS" />
                           <Button fx:id="goto_home" text="Home" />
                       </children>
                   </HBox>
               </children>
           </VBox>
           <VBox>
               <children>
                   <GridPane minHeight="20.0" minWidth="80.0" VBox.vgrow="NEVER">
                       <columnConstraints>
                           <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                           <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                       </columnConstraints>
                       <rowConstraints>
                           <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                       </rowConstraints>
                       <children>
                           <Label text="Username" />
                           <TextField fx:id="username" GridPane.columnIndex="1" />
                           <Label text="Password" GridPane.rowIndex="1" />
                           <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                       </children>
               <VBox.margin>
                  <Insets left="4.0" />
               </VBox.margin>
                   </GridPane>
                   <VBox VBox.vgrow="ALWAYS">
                       <children>
                                   </children>
                   </VBox>
                   <HBox alignment="CENTER_LEFT" prefHeight="20.0" prefWidth="20.0">
                       <children>
                           <HBox HBox.hgrow="ALWAYS" />
                           <Button fx:id="login" mnemonicParsing="false" text="Login" />
                       </children>
                   </HBox>
               </children>
           </VBox>
       </items>
   </SplitPane>
